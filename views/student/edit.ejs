<section class="my-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow-lg">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h2>Edit Student</h2>
                        <a href="/student" class="btn btn-primary">Back</a>
                    </div>
                    <div class="card-body">
                        <form action="/student/update/<%= editData.id %> " method="POST" enctype="multipart/form-data">
                            <div class="my-3">
                                <label for="">Name</label>
                                <input type="text" value="<%= editData.name %>" class="form-control" name="name">
                            </div>
                            <div class="my-3">
                                <label for="">Email</label>
                                <input type="text" value="<%= editData.email %>" class="form-control" name="email">
                            </div>
                            <div class="my-3">
                                <label for="">Phone</label>
                                <input type="text" value="<%= editData.phone %>" class="form-control" name="phone">
                            </div>
                            <div class="my-3">
                                <label for="" class="d-block mb-1">Gender</label>
                                <div class="form-check form-check-inline">

                                    <input <% if (editData.gender=="Male" ) { %> checked <% } %>
                                        class="form-check-input" type="radio" name="gender" id="male"
                                        value="Male">
                                        <label class="form-check-label" for="male">Male</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input <% if (editData.gender=="Female" ) { %> checked <% } %>
                                        class="form-check-input" type="radio" name="gender" id="female"
                                        value="Female">
                                        <label class="form-check-label" for="female">Female</label>
                                </div>
                            </div>
                            <div class="my-3">
                                <label for="">Location</label>
                                <select name="location" id="" class="form-control">
                                    <option value="">--Select--</option>
                                    <option <% if (editData.location=="Mohakhali" ) { %> selected <% } %>
                                            value="Mohakhali">Mohakhali</option>
                                    <option <% if (editData.location=="Mirpur" ) { %> selected <% } %>
                                            value="Mirpur">Mirpur</option>
                                    <option <% if (editData.location=="Badda" ) { %> selected <% } %>
                                            value="Badda">Badda</option>
                                    <option <% if (editData.location=="Gulshan" ) { %> selected <% } %>
                                            value="Gulshan">Gulshan</option>
                                    <option <% if (editData.location=="Banani" ) { %> selected <% } %>
                                            value="Banani">Banani</option>
                                </select>
                            </div>
                            <div class="my-3">
                                <label for="">Photo</label>
                                <input type="file" class="form-control" name="student_photo">
                            </div>
                            <div class="my-3">
                                <input type="submit" class="btn btn-primary w-100" value="Update Student">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>